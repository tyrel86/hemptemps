<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(contact_type) -%>">
  <span class='title'>
    <%= contact_type.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.contact_types_contact_type_path(contact_type),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_contact_types_admin_contact_type_path(contact_type),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.contact_types_admin_contact_type_path(contact_type),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => contact_type.name),
        :method => :delete %>
  </span>
</li>

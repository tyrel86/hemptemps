<ul>
  <% if ::Refinery::ContactTypes::Admin::ContactTypesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.contact_types_admin_contact_types_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_contact_types_admin_contact_type_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::ContactTypes::Admin::ContactTypesController.sortable? && ::Refinery::ContactTypes::ContactType.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Contact Types"),
                 refinery.contact_types_admin_contact_types_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Contact Types"),
                 refinery.contact_types_admin_contact_types_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>

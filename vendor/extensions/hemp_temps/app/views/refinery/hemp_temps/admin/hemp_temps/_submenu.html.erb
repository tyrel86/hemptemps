<div id='actions'>
  <ul>
    <% if ::Refinery::HempTemps::Admin::HempTempsController.searchable? %>
      <li>
        <%= render '/refinery/admin/search', :url => refinery.hemp_temps_admin_hemp_temps_path %>
      </li>
    <% end %>
    <li <%= "class='selected'" if params[:action] == "index" %>>
      <%= link_to t('.inbox'), refinery.hemp_temps_admin_hemp_temps_path, :class => "email_icon" %>
    </li>
    <li>
      <%= link_to t('.update_notified'),
                    refinery.edit_hemp_temps_admin_setting_path(:hemp_temp_notification_recipients, :dialog => true, :height => 300),
                    :class => "user_comment_icon" %>
    </li>
    <li>
      <%= link_to t('.edit_confirmation_email'),
                  refinery.edit_hemp_temps_admin_setting_path(:hemp_temp_confirmation_body, :dialog => true),
                  :class => "edit_email_icon" %>
    </li>
  </ul>
</div>
